        <StackPanel Orientation="Horizontal">
            <Label Margin="80,8" Foreground="White">
                Name
            </Label>
            <Label Margin="2,8" Foreground="White">
                Age
            </Label>
            <Label Margin="88,8" Foreground="White">
                Gender
            </Label>
            <Label Margin="8,8" Foreground="White">
                Weight
            </Label>
            <Label Margin="88,8" Foreground="White">
                Date
            </Label>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Label Margin="28,90" Foreground="White">Disease</Label>
            <TextBox Margin="0,-130,0,0" Height="33" Width="724" Background="#B2C9AD"></TextBox>
            <Label Margin="28,-230,0,-170" Height="33" Foreground="White">Description</Label>
            <TextBox Margin="0,-240,0,-250" Height="33" Width="730" Background="#B2C9AD"></TextBox>
            <Label Margin="28,-290,0,-370" Height="33" Foreground="White">Medicine</Label>
            <ComboBox Margin="40,60" Height="33" Width="720" Background="#B2C9AD">
