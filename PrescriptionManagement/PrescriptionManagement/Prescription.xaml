                <ComboBoxItem>Meftal</ComboBoxItem>
                <ComboBoxItem>Montral</ComboBoxItem>
                <ComboBoxItem>Gelusine</ComboBoxItem>
                <ComboBoxItem>Derifiline</ComboBoxItem>
                <ComboBoxItem>Tusk</ComboBoxItem>
            </ComboBox>
            <Label Margin="28,-57,0,90" Height="33" Foreground="White">Dosage</Label>
            <StackPanel Orientation="Horizontal">
                <RadioButton Margin="38,-130,0,32" Height="33" Foreground="White">1-1-1</RadioButton>
                <RadioButton Content="1-0-1" Margin="30,-90,0,73" Height="33" Foreground="White"></RadioButton>
                <RadioButton Content="0-0-1" Margin="30,-90,0,73" Height="33" Foreground="White"></RadioButton>
            </StackPanel>
            <Label Margin="28,-85,0,190" Height="33" Foreground="White">After/Before</Label>
            <StackPanel Orientation="Horizontal">
                <RadioButton Height="33" Content="Before" Margin="38,-250,0,90" Foreground="White"></RadioButton>
                <RadioButton Height="33" Content="After" Margin="30,-250,0,90" Foreground="White"></RadioButton>
            </StackPanel>
            <Button HorizontalAlignment="Right" Margin="0,-290,40,40" Height="33" Width="60" Style="{StaticResource SubmitButton}" >Save</Button>
