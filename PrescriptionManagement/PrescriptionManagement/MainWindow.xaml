<Window x:Class="PrescriptionManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrescriptionManagement"
        xmlns:vm="clr-namespace:PrescriptionManagement.ViewModel"
        mc:Ignorable="d"
        Title="AK Groups" Height="450" Width="800" Icon="Asset/Group 2.ico">
    <Window.DataContext>
        <vm:MainWindowViewModel></vm:MainWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="#4B5945">
            <StackPanel Orientation="Horizontal">
                <Image Height="50" Width="50" Source="Asset/Group 4.png">
                    <Image.OpacityMask>
                        <ImageBrush ImageSource="Asset/Group 4.png"/>
                    </Image.OpacityMask>
                </Image>
                <TextBlock Grid.Row="0" Text="Dr.Appukuttans Clinic" Margin="10" FontSize="16" FontWeight="ExtraBold" Foreground="#E7FBE6"></TextBlock>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Background="#597445">
                <StackPanel Grid.Column="0" Background="#91AC8F" Margin="5">
                    <TextBlock Text="Name" Margin="5"></TextBlock>
                    <TextBox Text="{Binding Name}" Width="200" HorizontalAlignment="Left" Margin="5,0"></TextBox>
                    <TextBlock Text="Age"  Margin="5"></TextBlock>
                    <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, StringFormat='{}{0;#;#;}'}"  Width="200" HorizontalAlignment="Left" Margin="5,0">
                        <Validation.ErrorTemplate>
                            <ControlTemplate>
                                <StackPanel>
                                    <AdornedElementPlaceholder></AdornedElementPlaceholder>
                                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"></TextBlock>
                                </StackPanel>
                            </ControlTemplate>
                        </Validation.ErrorTemplate>
                    </TextBox>
                    <TextBlock Text="Gender" Margin="5,15,0,0"></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <RadioButton Content="Male"></RadioButton>
                        <RadioButton Content="Female" Margin="5,0"></RadioButton>
                    </StackPanel>
                    <DatePicker Margin="5,0"></DatePicker>
                    <Button Content="Add" Style="{StaticResource AddButton}"></Button>
                </StackPanel>
            </Border>
            <StackPanel Grid.Column="1" Background="#B2C9AD">

            </StackPanel>
        </Grid>
    </Grid>
</Window>
